<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/ripple_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Status Indicator -->
    <View
        android:id="@+id/view_status_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:background="?attr/colorTertiary" />

    <!-- Report Icon -->
    <ImageView
        android:id="@+id/icon_report_type"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/primary_color"
        android:padding="6dp"
        android:src="@drawable/ic_document"
        android:tint="@color/white" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Blood Test Report" />

        <TextView
            android:id="@+id/text_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="March 15, 2024" />

        <TextView
            android:id="@+id/text_report_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="All parameters within normal range. Hemoglobin levels improved." />

    </LinearLayout>

    <!-- Chevron -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="@color/secondary_text" />

</LinearLayout>