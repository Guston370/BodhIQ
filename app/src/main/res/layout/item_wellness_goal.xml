<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rounded_background"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Goal Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_goal_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_target"
            android:tint="@color/primary_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_goal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Daily Steps" />

            <TextView
                android:id="@+id/text_goal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                tools:text="Walk 10,000 steps daily" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_goal_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="75%" />

    </LinearLayout>

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progress_goal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:progressTint="@color/primary_color"
            android:progressBackgroundTint="@color/card_stroke"
            tools:progress="75" />

        <TextView
            android:id="@+id/text_goal_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            tools:text="7,500 / 10,000" />

    </LinearLayout>

    <!-- Goal Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_edit_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_background"
            android:padding="8dp"
            android:text="Edit"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_delete_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/ripple_background"
            android:padding="8dp"
            android:text="Delete"
            android:textColor="@color/error"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>