<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Upload Area -->
    <LinearLayout
        android:id="@+id/card_upload_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/image_placeholder_background"
            android:contentDescription="Image preview"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_upload_placeholder"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon_upload"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:alpha="0.7"
            android:src="@drawable/ic_cloud_upload"
            android:tint="@color/primary_color" />

        <TextView
            android:id="@+id/text_upload_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Upload Medical Report"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_upload_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Select an image or document from your device\nSupports JPG, PNG, PDF formats"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <!-- Upload Options -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Select Image"
                android:drawableStart="@drawable/ic_gallery"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@color/white"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Select Document"
                android:drawableStart="@drawable/ic_document"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary_color"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="1dp"
                app:iconTint="@color/primary_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- Selected File Actions -->
    <LinearLayout
        android:id="@+id/layout_file_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- File Info Card -->
        <LinearLayout
            android:id="@+id/layout_file_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/icon_file_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_document"
                android:tint="@color/primary_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected File"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="File size"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_remove_file"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Remove file"
                android:src="@drawable/ic_close"
                android:tint="@color/error" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Change File"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary_color"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="1dp"
                app:iconTint="@color/primary_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_process_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Process File"
                android:drawableStart="@drawable/ic_text_recognition"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@color/white"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Upload Guidelines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Upload Guidelines"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="â€¢ Use high-resolution images for better text recognition\nâ€¢ Ensure documents are well-lit and in focus\nâ€¢ PDF files should be clear and readable\nâ€¢ Supported formats: JPG, PNG, PDF\nâ€¢ Maximum file size: 10MB"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>