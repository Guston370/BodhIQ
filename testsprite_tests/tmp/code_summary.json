{
  "project_name": "BodhIQ",
  "project_type": "Android Mobile Application",
  "description": "Medical agent Android app with AI-powered health management features including medical report scanning, medicine reminders, emergency QR codes, and pharmaceutical intelligence",
  "tech_stack": {
    "platform": "Android",
    "language": "Java",
    "min_sdk": 24,
    "target_sdk": 36,
    "build_system": "Gradle (Kotlin DSL)",
    "architecture": "MVVM with Repository Pattern",
    "dependency_injection": "Hilt",
    "database": "Room with RxJava3",
    "authentication": "Firebase Auth with Google Sign-In",
    "backend": "Firebase (Firestore, Storage)",
    "ai_services": [
      "Google AI Gemini API",
      "ML Kit Text Recognition (OCR)"
    ],
    "key_libraries": [
      "AndroidX (AppCompat, Fragment, Navigation, RecyclerView)",
      "Firebase BOM 32.7.0",
      "RxJava3 & RxAndroid",
      "CameraX",
      "Glide (Image Loading)",
      "ZXing (QR Code Generation)",
      "Retrofit & OkHttp",
      "DataStore Preferences",
      "Gson"
    ]
  },
  "features": [
    {
      "name": "Authentication",
      "description": "User authentication with Firebase and Google Sign-In",
      "components": [
        "SplashActivity",
        "LoginActivity",
        "SignUpActivity",
        "ForgotPasswordActivity"
      ],
      "key_classes": [
        "AuthManager",
        "GoogleSignInDiagnostics",
        "LogoutManager"
      ]
    },
    {
      "name": "Medical Report Scanning",
      "description": "OCR-based medical report scanning and analysis using ML Kit",
      "components": [
        "TextResultActivity",
        "ReportDetailsActivity"
      ],
      "key_classes": [
        "TextRecognitionService",
        "MedicalTextAnalyzer",
        "DocumentAnalyzer",
        "MedicalReportAgent"
      ]
    },
    {
      "name": "Medicine Reminders",
      "description": "Scheduled medicine reminders with notifications and alarm management",
      "components": [
        "RemindersActivity"
      ],
      "key_classes": [
        "ReminderReceiver",
        "NotificationActionReceiver",
        "BootReceiver",
        "ReminderScheduler"
      ],
      "permissions": [
        "POST_NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ]
    },
    {
      "name": "Emergency QR Code",
      "description": "Generate emergency medical information QR codes with patient data",
      "components": [
        "EmergencyQrActivity"
      ],
      "key_classes": [
        "EmergencyPayloadBuilder",
        "EmergencyQrValidator",
        "QrUtil"
      ],
      "schema": "medical-agent.v1"
    },
    {
      "name": "AI Medical Chatbot",
      "description": "Conversational AI chatbot for medical queries and document analysis",
      "key_classes": [
        "ChatController",
        "ActionHandler",
        "ConversationContext",
        "EmergencyDetector",
        "EmpathicMedicalResponseGenerator",
        "EmpathicResponseBuilder"
      ]
    },
    {
      "name": "Pharmaceutical Intelligence",
      "description": "Multi-agent system for pharmaceutical research and insights",
      "agents": [
        "MasterAgent",
        "PharmaceuticalAgent",
        "ClinicalTrialsAgent",
        "PatentLandscapeAgent",
        "MarketInsightsAgent",
        "InternalInsightsAgent",
        "EximTradeAgent",
        "WebIntelligenceAgent",
        "ReportGeneratorAgent"
      ]
    },
    {
      "name": "Health Tracking",
      "description": "Track health history and wellness goals",
      "key_classes": [
        "HealthHistoryItem",
        "WellnessGoal",
        "BMICalculator"
      ]
    }
  ],
  "data_layer": {
    "database": "Room Database",
    "repositories": "Repository Pattern with RxJava3",
    "preferences": "DataStore Preferences",
    "cloud_storage": "Firebase Firestore & Storage"
  },
  "permissions": [
    "INTERNET",
    "ACCESS_NETWORK_STATE",
    "CAMERA",
    "READ_EXTERNAL_STORAGE",
    "WRITE_EXTERNAL_STORAGE",
    "POST_NOTIFICATIONS",
    "SCHEDULE_EXACT_ALARM",
    "USE_EXACT_ALARM",
    "RECEIVE_BOOT_COMPLETED",
    "WAKE_LOCK"
  ],
  "testing": {
    "unit_tests": "JUnit, Robolectric, Mockito",
    "instrumentation_tests": "AndroidX Test, Espresso",
    "integration_test_activity": "IntegrationTestActivity"
  }
}
